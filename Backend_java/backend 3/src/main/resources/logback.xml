<property name="LOG_PATTERN" value="%d{yyyy-MM-dd} %p %c{1.} [%X{user}] %m%n" />
	
	<appender name="customUserLog" class="com.realnet.loggingeachuserconfig.DynamicFileAppender">
		<logDirectory>${APP_LOG_ROOT}</logDirectory>
		<!--<fileNamePattern>${APP_LOG_ROOT}/UserLogs/%d{yyyy-MM-dd}.log</fileNamePattern>-->
		<fileNamePattern>${APP_LOG_ROOT}/%d.log</fileNamePattern>
		<maxSize>10MB</maxSize>
		<layout class="ch.qos.logback.classic.PatternLayout">
			<pattern>${LOG_PATTERN}</pattern>
		</layout>
	</appender>
	
	<logger name="com.realnet" level="INFO">
		<appender-ref ref="customUserLog" />
	</logger>
	
	<root level="info">
		<appender-ref ref="console" />
